---


<Layout title="Inicio | Mi Portafolio">
	<section class="section-welcome">
		<div class="div-welcome">
			<div class="welcome-info">
				<h1>Jimmy Carreño</h1>
				<h2>Desarrollador FullStack</h2>
				<a href="/cv/Jimmy-Carreno-CV.pdf" target="_blank" rel="noopener noreferrer" class="btn btn-outline-primary">
					Ver CV
				  </a>
			</div>
			<picture>
				<img src="/public/images/welcome-desarrollo.png" alt="">
			</picture>
		</div>
	</section>

	<section class="section-skills">
		<div class="container">
		  <h2 class="text-center mb-4">Skills</h2>
		  <div class="row justify-content-center">
			
			<div class="col-6 col-sm-4 col-md-3 col-lg-2 mb-4 d-flex justify-content-center">
			  <div class="skill-item">
				<img src="icons/html.png" alt="HTML" loading="lazy" />
				<p>HTML</p>
			  </div>
			</div>
	  
			<div class="col-6 col-sm-4 col-md-3 col-lg-2 mb-4 d-flex justify-content-center">
			  <div class="skill-item">
				<img src="icons/css.png" alt="CSS" loading="lazy" />
				<p>CSS</p>
			  </div>
			</div>
	  
			<div class="col-6 col-sm-4 col-md-3 col-lg-2 mb-4 d-flex justify-content-center">
			  <div class="skill-item">
				<img src="icons/javascript.png" alt="JavaScript" loading="lazy" />
				<p>JavaScript</p>
			  </div>
			</div>
	  
			<div class="col-6 col-sm-4 col-md-3 col-lg-2 mb-4 d-flex justify-content-center">
			  <div class="skill-item">
				<img src="icons/bootstrap.png" alt="Bootstrap" loading="lazy" />
				<p>Bootstrap</p>
			  </div>
			</div>
	  
			<div class="col-6 col-sm-4 col-md-3 col-lg-2 mb-4 d-flex justify-content-center">
			  <div class="skill-item">
				<img src="icons/csharp.png" alt="C#" loading="lazy" />
				<p>C#</p>
			  </div>
			</div>
	  
			<div class="col-6 col-sm-4 col-md-3 col-lg-2 mb-4 d-flex justify-content-center">
			  <div class="skill-item">
				<img src="icons/net-core.png" alt=".NET" loading="lazy" />
				<p>.NET</p>
			  </div>
			</div>
	  			
	  
			<div class="col-6 col-sm-4 col-md-3 col-lg-2 mb-4 d-flex justify-content-center">
			  <div class="skill-item">
				<img src="icons/azure.png" alt="Azure" loading="lazy" />
				<p>Azure</p>
			  </div>
			</div>
	  
			<div class="col-6 col-sm-4 col-md-3 col-lg-2 mb-4 d-flex justify-content-center">
			  <div class="skill-item">
				<img src="icons/api.png" alt="APIs" loading="lazy" />
				<p>APIs</p>
			  </div>
			</div>
	  				  			
			<div class="col-6 col-sm-4 col-md-3 col-lg-2 mb-4 d-flex justify-content-center">
			  <div class="skill-item">
				<img src="icons/sql.png" alt="SQL" loading="lazy" />
				<p>SQL</p>
			  </div>
			</div>	  						
	  			
			<div class="col-6 col-sm-4 col-md-3 col-lg-2 mb-4 d-flex justify-content-center">
			  <div class="skill-item">
				<img src="icons/docker.png" alt="Docker" loading="lazy" />
				<p>Docker</p>
			  </div>
			</div>	
			
			<div class="col-6 col-sm-4 col-md-3 col-lg-2 mb-4 d-flex justify-content-center">
				<div class="skill-item">
				  <img src="icons/python.png" alt="Python" loading="lazy" />
				  <p>Python</p>
				</div>
			  </div>
	  
		  </div>
		</div>
	</section>
	  
</Layout>

<style>
	.div-welcome {
		min-height: calc(100vh - 135px);
		display: flex;
		align-items: center;
		justify-content: space-between;
		color: white;	
		padding: 0 40px;		
	}

	.div-welcome h1 {
		font-size: 2rem;
		color: black;
	}

	.div-welcome h2 {
		color: #0d6efd;
	}

	.div-welcome a {
		color: black;
		text-decoration: none;
		background-color: transparent;
		border: 1px solid #0d6efd;
		border-radius: 24px;
		padding: 8px;
		transition: background-color 0.4s ease;
	}

	.div-welcome a:hover {
		background-color: #0d6efd;
		cursor: pointer;
	}

	welcome-info {
		align-items: center;
	}

	picture img {
		align-items: center;
		width: 400px;		
	}	











	.section-skills {
		/* Ajusta el padding y el color de fondo a tu gusto */
		padding: 2rem;
		/* background-color: #000; por ejemplo, negro */
		color: #fff;
	}

	.section-skills h2 {
		margin-bottom: 2rem;
		color:#0d6efd;
		font-weight: bold;
	}

	/* Forma hexagonal */
	.skill-item {
		width: 120px;      /* Ajusta el tamaño del hexágono */
		height: 120px;
		background: #333;  /* Color de fondo del hexágono */
		
	
		/* Clip-path para el hexágono */
		clip-path: polygon(
			50% 0%,
			93% 25%,
			93% 75%,
			50% 100%,
			7% 75%,
			7% 25%
		);

		/* Centrar icono y texto dentro */
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		
		/* Animación suave al hacer hover */
		transition: transform 0.3s;
	}

	.skill-item:hover {
		transform: scale(1.1);
		box-shadow: 0 0 15px rgba(255, 255, 255, 0.3);
	}

	/* Iconos dentro del hexágono */
	.skill-item img {
		width: 40px;   /* Ajusta a tu gusto */
		height: 40px;
		margin-bottom: 0.5rem;
	}

		/* Texto dentro del hexágono */
	.skill-item p {
		margin: 0;
		font-size: 0.9rem;
		font-weight: bold;
	}
</style>