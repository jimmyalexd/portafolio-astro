<style>
	section {
		width: 100%;
  		padding: 4rem 0;
	}

	section:nth-of-type(odd) {
		background-color: var(--body-bg);
		color: var(--text-default); /* Ajusta si quieres texto blanco */
	}

	section:nth-of-type(even) {
		background-color: var(--body-bg-secondary);
		color:var(--text-default);
	}

	.container {
		max-width: 1000px;
		margin: 0 auto;    /* centra horizontalmente */
		padding: 0 2rem;   /* margen lateral si quieres */
	}

	.div-welcome {
		height: 40vh;
		display: flex;
		align-items: center;
		justify-content: center;
		color: var(--text-default);	
		padding: 0 40px;	
		text-align: center;	
	}

	.div-welcome h1 {
		font-size: 3rem;
		color: var(--text-blue);
	}

	.div-welcome h2 {
		font-size: 4rem;
		color: var(--text-default);
	}

	.div-welcome a {
		margin-top: 20px;
		color: var(--text-blue);
		text-decoration: none;
		background-color: transparent;
		border: 2px solid var(--text-blue);
		border-radius: 20px;
		padding: 5px 15px;
		font-size: 20px;
		transition: background-color 0.4s ease;
	}

	.div-welcome a:hover {
		background-color: var(--text-blue-secondary);
		cursor: pointer;
	}

	welcome-info {
		text-align: center;
		align-items: center;
	}

		













	.section-experience {
		padding: 8rem 1rem;		
	}

	.section-experience h2 {
	text-align: left; 
	margin-bottom: 2rem;
	font-size: 1.5rem;
	color: var(--text-default); /* Ajusta según tu estilo */
	}

	.experience-container {
	display: flex;
	flex-direction: row;
	gap: 2rem; /* Separación entre columnas */
	}

	/* Columna izquierda: la lista de experiencias */
	.experience-nav {
	flex: 1; /* Controla el espacio de la columna izquierda */
	max-width: 200px; /* O el ancho que prefieras */
	}

	.experience-nav ul {
	list-style: none;
	padding: 0;
	margin: 0;
	}

	.experience-nav li {
	cursor: pointer;
	padding: 0.75rem 1rem;
	border-left: 2px solid transparent;
	transition: all 0.2s;
	color: var(--text-default);
	}

	.experience-nav li:hover {
	background-color: var(--text-blue-secondary);
	}

	.experience-nav li.active {
	border-left: 4px solid var(--text-blue); /* Color destacado */
	color: var(--text-blue);
	font-weight: bold;
	background-color: transparent;
	}

	/* Columna derecha: detalles de la experiencia */
	.experience-details {
	flex: 3; /* Ocupa el resto del espacio */
	}

	/* Ocultamos todas las secciones excepto la activa */
	.experience-content {
	display: none;
	}

	.experience-content.active {
	display: block;
	}

	.experience-content h3 {
	margin: 0 0 0.5rem;
	color: var(--text-default);
	font-size: 1.2rem;
	}

	.experience-content .date-range {
	margin-bottom: 1rem;
	font-style: italic;
	color: var(--text-default);
	}

	.experience-content ul {
	margin: 0;
	padding-left: 1.2rem;
	color: var(--text-default);
	}

	.experience-content ul li {
	margin-bottom: 0.5rem;
	}

	@media (max-width: 768px) {
		.experience-container {
			flex-direction: column;
		}
		
		.experience-nav {
			max-width: 100%;
			margin-bottom: 1rem;
		}
	}








	.section-skills {
		/* Ajusta el padding y el color de fondo a tu gusto */
		padding: 2rem;
		/* background-color: #000; por ejemplo, negro */
		color: var(--text-default);
	}

	.section-skills h2 {
		margin-bottom: 2rem;
		color: var(--text-blue);
		font-weight: bold;
	}

	/* Forma hexagonal */
	.skill-item {
		width: 120px;      /* Ajusta el tamaño del hexágono */
		height: 120px;
		background: var(--bg-simple);  /* Color de fondo del hexágono */
		
	
		/* Clip-path para el hexágono */
		clip-path: polygon(
			50% 0%,
			93% 25%,
			93% 75%,
			50% 100%,
			7% 75%,
			7% 25%
		);

		/* Centrar icono y texto dentro */
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		
		/* Animación suave al hacer hover */
		transition: transform 0.3s;
	}

	.skill-item:hover {
		transform: scale(1.1);
		box-shadow: 0 0 15px rgba(255, 255, 255, 0.3);
	}

	/* Iconos dentro del hexágono */
	.skill-item img {
		width: 40px;   /* Ajusta a tu gusto */
		height: 40px;
		margin-bottom: 0.5rem;
	}

		/* Texto dentro del hexágono */
	.skill-item p {
		margin: 0;
		font-size: 0.9rem;
		font-weight: bold;
		cursor: default;
	}
</style>

<script>
	document.addEventListener('DOMContentLoaded', () => {
		const navItems = document.querySelectorAll('.experience-nav li');
		const contents = document.querySelectorAll('.experience-content');
  
		navItems.forEach(item => {
			item.addEventListener('click', () => {
				// 1. Quitar la clase 'active' de todos los navItems
				navItems.forEach(i => i.classList.remove('active'));
				// 2. Añadir 'active' al item actual
				item.classList.add('active');
		
				// 3. Ocultar todos los contenidos
				contents.forEach(content => content.classList.remove('active'));
		
				// 4. Mostrar el contenido que coincide con el data-experience
				const experienceId = item.getAttribute('data-experience');
				const targetContent = document.getElementById(experienceId);
				if (targetContent) {
					targetContent.classList.add('active');
				}
				});
			});
		});		

</script>