---
const { title = 'Mi Portafolio' } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>

	<!-- Bootstrap CSS CDN -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-0evHe/X+R7YkI6wctkeq5aCkgy9Yp4mPikp/2qgUF0W8ayhr0TvOEV8yYF"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <header>
      <nav>
        <ul>
          <li><a href="/">Inicio</a></li>
		  <span>/</span>
          <li><a href="#about">Sobre m√≠</a></li>
		  <span>/</span>
		  <li><a href="#experience">Experiencia</a></li>
		  <span>/</span>
          <li><a href="#projects">Proyectos</a></li>
		  <span>/</span>
          <li><a href="#contact">Contacto</a></li>
        </ul>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <p>&copy; {new Date().getFullYear()} Tu Nombre</p>
    </footer>

	<!-- Bootstrap JS Bundle (con Popper) CDN -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ENjdO4Dr2bkBIFxQpeoH644dK+g9z1HB5j6MZyc7y5P6xOVH+8ABhF5A5UrQ"
      crossorigin="anonymous"
      defer
    ></script>

    <style>
		html, body {
			margin: 0;
			padding: 0;
			font-family:Georgia, 'Times New Roman', Times, serif;
			background-color: #f3f4f6;			
		}


		header {
			background-color: white;			
			padding: 0 40px;
			box-shadow: 2px 2px 2px 1px rgba(0, 0, 0, 0.2);
		}

		nav ul {
			display: flex;
			gap: 1rem;
			list-style: none;
			padding: 25px 25px;
			margin: 0;
			justify-content: right;
		}
		nav span {
			font-weight: bold;
		}

		nav a {
			color: black;
			text-decoration: none;			
			font-size: 18px;
			font-weight: bold;
		}

		nav a:hover {
			color: #0d6efd;
		}

		main {
			padding: 2rem;
			max-width: 1000px;
			margin: auto;
		}

		footer {
			text-align: center;
			padding: 1rem;
			background-color: #fff;
			color: black;
			box-shadow: 2px -2px 2px 1px rgba(0, 0, 0, 0.2);
		}

		/* Scrollbar moderno (compatible con WebKit: Chrome, Edge, Safari) */
		::-webkit-scrollbar {
		width: 8px;
		height: 8px;
		}

		::-webkit-scrollbar-track {
			background: transparent;
		}

		::-webkit-scrollbar-thumb {
			border-radius: 8px;
			border: 2px solid transparent;
			background-clip: content-box;
		}

		/* Firefox */
		* {
			scrollbar-width: thin;		
		}
    </style>
  </body>
</html>

